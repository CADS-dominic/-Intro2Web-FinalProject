<div class='admin_container'>
	<div class='sidebar'>
		<img src={{ava}} alt='Avatar' />
		<p>Hi, {{username}}</p>
		<br /><hr />
		<nav>
			<div class='sidebar_item'>
				<i class='fa-solid fa-user'></i>
				<a href='/admin'>Admin</a>
			</div>
			<div class='sidebar_item'>
				<i class='fa-solid fa-list'></i>
				<a href='/account'>Account</a>
				<i class='fa-solid fa-caret-down'></i>
				<div class='sidebar_subitem'>
					<a href='/account'>View account list</a>
					<a href='/account/ban'>Ban account</a>
					<a href='/account/unban'>Unban account</a>
				</div>
			</div>
			<div class='sidebar_item'>
				<i class='fa-solid fa-cart-flatbed'></i>
				<a href='/product'>Product</a>
				<i class='fa-solid fa-caret-down'></i>
				<div class='sidebar_subitem'>
					<a href='/product'>View product list</a>
					<a href='/product/add'>Add new product</a>
					<a href='/product/update'>Update product</a>
				</div>
			</div>
			<div class='sidebar_item'>
				<i class='fa-solid fa-money-bills'></i>
				<a href='/order'>Order</a>
			</div>
			<div class='sidebar_item'>
				<i class='fa-solid fa-right-from-bracket'></i>
				<a href='/logout'>Logout</a>
			</div>
			<hr />
		</nav>
	</div>
	<div class='admin_body'>
		{{! TODO: hien list comment }}
		<h1>Details</h1>
		<hr />
		<div class='product_detailsContainer'>
			<div style='display: flex;flex-direction: column;overflow-y: scroll;'>
				{{#each product.ava}}
					<div>
						<img src={{this}} alt='Avatar' class={{this}} />
						<button class={{this}} onclick='remove(event)'>Remove</button>
					</div>
				{{/each}}
			</div>
			<div class='product_detailsCard'>
				<p id='getid'><b>ID: </b>{{product._id}}</p>
				<p><b>Name:</b> {{product.name}}</p>
				<p><b>Price: </b>{{product.price}}$</p>
				<p><b>Status:</b>
					{{#if product.status}}
						On stock
					{{else}}
						Out of stock
					{{/if}}
				</p>
				<p><b>Category: </b>{{product.category}}</p>
				<p><b>Brand:</b> {{product.brand}}</p>
				<p><b>Description:</b></p>
				<p>{{product.description}}</p>
			</div>
		</div>
	</div>
</div>
<script src='/javascripts/admin/details.js'></script>