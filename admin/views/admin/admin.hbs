	<div class='admin_body'>
		<div class='admin_profileContainer'>
			<h1>Edit your profile</h1>
			<hr />
			<form method='post' class='admin_form' id='profile_form'>
				<label for='profile_password'>New password:</label>
				<input type='password' id='profile_password' />
				<label for='profile_repassword'>Re-enter your new password:</label>
				<input type='password' id='profile_repassword' />
				<label for='profile_ava'>Update avatar:</label>
				<input type='file' id='profile_ava' />
				<div style='text-align: right;'>
					<button>Save</button>
				</div>
			</form>
		</div>
	</div>
