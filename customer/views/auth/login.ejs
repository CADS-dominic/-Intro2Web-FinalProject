<body>
  <div class="header">
    <ul class="nav">
      <li class="nav-item">
        <a href="/">
          <img class="logo" src="../../public/images/logo.png" alt="">
        </a>
      </li>
    </ul>
  </div>

  
  <div class="content" style="margin-top: 200px; width: 1200px; margin: 120px auto 0 auto;">
    <div class="row mb-5">
      <div class="col-md-6 m-auto">
        <div class="card card-body">
          <h1 class="text-center mb-3" style="color: black;">
            <i class="fas fa-sign-in-alt"></i> Login
          </h1>
          <%- include ('./msgAlert'); %>


            <form action="/auth/login" method="POST">
              <div class="form-group">
                <!-- <label for="email">Email</label> -->
                <input type="email" id="email" name="email" class="form-control" placeholder="Enter email" />
              </div>
              <div class="form-group mt-2">
                <input type="password" id="password" name="password" class="form-control mb-2"
                  placeholder="Enter password" />
                <a href="/auth/forgot" style="font-style: italic;text-decoration: none; color: black;">Forgot
                  password?</a>
              </div>
              <button type="submit" class="btn btn-primary btn-block mt-2"
                style="background-color: #FE5E20; border-color: #FE5E20;">Login
              </button>
            </form>
            <div class="mt-4">
              or Login with:
              <a href="/auth/facebook" class="btn btn-primary btn-block"><i class="fa-brands fa-facebook"></i>
                Facebook</a>
            </div>

            <p class="lead mt-4">
              No Account? <a href="/auth/register" style="text-decoration: none;">Register</a>
            </p>
        </div>
      </div>
    </div>
  </div>


</body>